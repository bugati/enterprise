<h1>Listing invoices</h1>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Company</th>
          <th>Tax</th>
          <th>Person</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.date %></td>
            <td><%= invoice.company %></td>
            <td><%= invoice.tax %></td>
            <td><%= invoice.person %></td>
            <td><%= link_to 'Show', invoice, class: 'btn btn-default btn-sm' %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-success btn-sm' %></td>
            <td><%= link_to 'Destroy', invoice, method: :delete,class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Invoice', new_invoice_path %>
